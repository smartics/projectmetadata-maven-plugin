<projectMetaData xmlns="http://smartics.de/projectmetadata/1">
  <metaData>
    <name>Tags</name>
    <homepage>http://www.mojohaus.org/taglist-maven-plugin/</homepage>
    <description>
      The Taglist Maven Plugin generates a report on various tags
      found in the code, like @todo or //TODO tags.
    </description>
    <category>code</category>
    <subcategory>marker</subcategory>

    <files>
      <projectLocation>/target/taglist</projectLocation>
      <archiveLocation>code/marker</archiveLocation>
      <filter>
        <includes>
          <include>*.xml</include>
        </includes>
      </filter>
    </files>
  </metaData>
</projectMetaData>